            <block class="Magento\Framework\View\Element\Html\Link\Current"  name="customer-header-links">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Apply For Job</argument>
                    <argument name="path" xsi:type="string">jobapply/</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links">
